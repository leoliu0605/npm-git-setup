{
  "name": "@leoli0605/git-setup",
  "version": "0.5.0",
  "description": "一款基於 `@willh/git-setup` 的 git 初始化工具，用於快速初始化 git 設定檔案",
  "bin": "./bin/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/leoli0605/npm-git-setup"
  },
  "bugs": {
    "url": "https://github.com/leoli0605/npm-git-setup/issues"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "keywords": [
    "git",
    "setup",
    "config"
  ],
  "homepage": "https://github.com/leoli0605/npm-git-setup",
  "author": "Leo Li",
  "license": "MIT",
  "scripts": {
    "tag": "npm run tag:minor",
    "tag:major": "npm version major && git push --follow-tags",
    "tag:minor": "npm version minor && git push --follow-tags",
    "tag:patch": "npm version patch && git push --follow-tags"
  }
}
